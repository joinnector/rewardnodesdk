{
	"name": "rewardnodesdk",
	"version": "1.0.0",
	"description": "ester rewardnodesdk",
	"author": "ester",
	"husky": {
		"hooks": {
			"pre-commit": "yarn run ts:lint && yarn run js:lint && yarn build && yarn run test",
			"pre-push": "yarn run ts:lint && yarn run js:lint && yarn build && yarn run test"
		}
	},
	"scripts": {
		"build": "rm -rf dist && tsc",
		"dev": "ts-node-dev ./src/app.ts",
		"prod": "yarn run build && npx ./dist/app.js",
		"ts:lint": "eslint . --ext .ts",
		"ts:lint:fix": "eslint . --ext .ts --fix",
		"js:lint": "eslint . --ext .js",
		"js:lint:fix": "eslint . --ext .js --fix",
		"debug": "ndb ./dist/app.js",
		"console": "npx ./ecosystem.console.js",
		"test": "./node_modules/.bin/mocha --timeout 15000  --exit",
		"cover": "nyc --reporter=text ./node_modules/.bin/_mocha --timeout 15000  --exit"
	},
	"dependencies": {
		"async": "^3.2.0",
		"axios": "^0.19.2",
		"basic-auth": "^2.0.1",
		"bcrypt": "^5.0.0",
		"lodash": "^4.17.20",
		"moment": "^2.27.0",
		"querystring": "^0.2.0",
		"stack-trace": "^0.0.10",
		"uuid": "^8.2.0",
		"uuid-validate": "^0.0.3",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-runtime": "^7.11.5",
		"@babel/runtime": "^7.11.2",
		"@types/async": "^3.2.3",
		"@types/basic-auth": "^1.1.3",
		"@types/bcrypt": "^3.0.0",
		"@types/chai": "^4.2.12",
		"@types/lodash": "^4.14.157",
		"@types/mocha": "^8.0.2",
		"@types/morgan": "^1.9.0",
		"@types/node": "^14.0.1",
		"@types/stack-trace": "^0.0.29",
		"@types/uuid": "^8.0.0",
		"@types/uuid-validate": "^0.0.1",
		"@typescript-eslint/eslint-plugin": "^3.6.0",
		"@typescript-eslint/parser": "^3.6.0",
		"chai": "^4.2.0",
		"eslint": "6.0.0",
		"husky": "^4.3.0",
		"mocha": "^8.1.1",
		"ndb": "^1.1.5",
		"nock": "^13.0.4",
		"nyc": "^15.1.0",
		"supertest": "^4.0.2",
		"ts-node": "^8.10.2",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.9.2"
	}
}
